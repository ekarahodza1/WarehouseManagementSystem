<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@/css/main.css" />
    </stylesheets>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <children>
        <Label text="%name" />
        <TextField fx:id="fieldName" GridPane.columnIndex="1" />
        <Label text="%type" GridPane.rowIndex="1" />
        <ChoiceBox fx:id="choiceType" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        

        <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="9">
            <buttons>
                <Button fx:id="btnOk" mnemonicParsing="false" onAction="#clickOk" text="Ok" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#clickCancel" text="%cancel" />
            </buttons>
        </ButtonBar>
      <Label text="%amount" GridPane.rowIndex="3" />
      <Label text="%u_price" GridPane.rowIndex="4" />
      <Label text="%price" GridPane.rowIndex="5" />
      <Label text="%warehouse" GridPane.rowIndex="6" />
      <Label text="%date" GridPane.rowIndex="7" />
      <Label text="%expiration" GridPane.rowIndex="8" />

      <TextField fx:id="fieldAmount" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="fieldUnitPrice" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextField fx:id="fieldPrice" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <ChoiceBox fx:id="choiceWarehouse" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <DatePicker fx:id="dateAdded" GridPane.columnIndex="1" GridPane.rowIndex="7" />

      <DatePicker fx:id="expirationDate" GridPane.columnIndex="1" GridPane.rowIndex="8" />
    </children>
    <opaqueInsets>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </opaqueInsets>
    <padding>
        <Insets bottom="20.0" left="10.0" right="15.0" top="10.0" />
    </padding>
</GridPane>
